@model AssignmentWebApp.Models.Product

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("input[type=text]").first().focus();
    });
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h1>Product</h1>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ProductID)


    <table class="table">
        <tr class="form-group">
            <td>Title</td>
            <td>@Html.TextBoxFor(model => model.Name, new { style = "width:300px" })@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</td>
        </tr>
        <tr>
            <td>Price</td>
            <td>@Html.DisplayFor(model => model.ListPrice)</td>
        </tr>
        <tr>
            <td>Description</td>
            <td>@Html.DisplayFor(model => model.Description)</td>
        </tr>
    </table>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />

        </div>
    </div>
    @if (@ViewBag.msg != "")
    {
        <h2>@ViewBag.msg</h2>
    }
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


<style type="text/css" media="screen">

    table {
        width: 80%;
        border-collapse: collapse;
        border: 1px solid #4286f4;
    }

        table td {
            border: 1px solid #4286f4;
        }
</style>